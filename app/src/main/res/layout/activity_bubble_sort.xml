<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/sortDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:id="@+id/values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/indexes"
                android:textAlignment="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/element_value_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="1"/>
            <TextView
                android:id="@+id/element_value_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="2"/>
            <TextView
                android:id="@+id/element_value_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="3"/>
            <TextView
                android:id="@+id/element_value_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="4"/>
            <TextView
                android:id="@+id/element_value_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="5"/>
            <TextView
                android:id="@+id/element_value_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="6"/>
            <TextView
                android:id="@+id/element_value_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="7"/>
            <TextView
                android:id="@+id/element_value_8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="8"/>
            <TextView
                android:id="@+id/element_value_9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="9"/>
            <TextView
                android:id="@+id/element_value_10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:text="10"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/values">
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/values"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/element_10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cases">
            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:onClick="onSort"
                android:text="@string/sort"
                />
            <TextView
                android:id="@+id/loop_amount"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/steps_amount"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="50dp" />
        </LinearLayout>



    </RelativeLayout>

    <ScrollView
        android:paddingTop="20dp"
        android:layout_below="@id/sortDisplay"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <TextView
            android:paddingStart="10dp"
            android:id="@+id/description"
            android:gravity="center_horizontal"
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:text="@string/bubble_sort_desc"
            />

    </ScrollView>


</RelativeLayout>